{
  "name": "ach-pet-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json && npm run postbuild:logger",
    "postbuild:logger": "node scripts/copy-logger.js",
    "start": "npx prisma migrate deploy && node dist/server.js",
    "smoke": "node scripts/smoke-test.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "migrate:status": "cross-env DATABASE_URL=%DATABASE_URL% prisma migrate status",
    "lint": "eslint .",
    "lint:all": "eslint .",
    "lint:e2e": "eslint e2e/**/*.cy.js",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:integration": "vitest run dist/__tests__/integration",
    "test:watch": "vitest",
    "coverage": "c8 vitest run --coverage",
    "test:integration:src": "npx tsx src/__tests__/integration/*.test.mts",
    "test:integration:src:all": "npx tsx src/__tests__/integration/adoptions.integration.test.mts && npx tsx src/__tests__/integration/auth.integration.test.mts && npx tsx src/__tests__/integration/chat.integration.test.mts && npx tsx src/__tests__/integration/followup.integration.test.mts && npx tsx src/__tests__/integration/pets.integration.test.mts",
    "test:integration:full": "npm run build && npm run test:integration"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "dependencies": {
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "autocannon": "^7.14.0",
    "@eslint/js": "^9.18.0",
    "@prisma/client": "^6.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.30",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.18",
    "autocannon": "^8.0.0",
    "c8": "^10.1.3",
    "coverage": "^0.4.1",
    "cross-env": "^10.1.0",
    "cypress": "^15.10.0",
    "eslint": "^9.18.0",
    "eslint-plugin-cypress": "^5.3.0",
    "globals": "^15.14.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.15.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
