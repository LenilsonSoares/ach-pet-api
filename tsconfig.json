{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noEmitOnError": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infra/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.mts", "src/**/*.js"]
}
